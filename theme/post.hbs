{{!< default}}

{{!-- The comment above "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<header class="main-header no-cover">
    <div class="main-header-content inner">
        <h1 class="page-title">{{@blog.title}}</h1>
         <a class="icon-popout github-popout" href="https://github.com/attilathedud"></a>
         <a class="icon-popout rss-popout" href="{{@blog.url}}/rss/"></a>
        {{!-- The blog navigation links --}}
        {{navigation}}
    </div>
</header>

<main class="content" role="main">
    <article class="{{post_class}}">

        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
            <section class="post-meta">
                <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" // "}}
            </section>
        </header>

        <section class="post-content">
            {{content}}
        </section>

    </article>

    <div id="disqus_thread"></div>
    <script>
        var disqus_config = function () {
            this.page.url = '{{url absolute="true"}}'; 
            this.page.identifier = 'ghost-{{id}}'; 
        };
        
        (function() { // DON'T EDIT BELOW THIS LINE
            var d = document, s = d.createElement('script');
            s.src = '//attilathedud.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
</main>

{{/post}}
