{{!< default}}

{{!-- The comment above "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<header class="main-header no-cover">
    <div class="main-header-content inner">
        <h1 class="page-title">{{@blog.title}}</h1>
         <a class="icon-popout github-popout" href="https://github.com/attilathedud"></a>
         <a class="icon-popout rss-popout" href="http://attilathedud.me/rss"></a>
        {{!-- The blog navigation links --}}
        {{navigation}}
    </div>
</header>

<main class="content" role="main">
    <article class="{{post_class}}">

        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
            <section class="post-meta">
                <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" // "}}
            </section>
        </header>

        <section class="post-content">
            {{content}}
        </section>

    </article>
</main>

{{/post}}
